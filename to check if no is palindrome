#include <stdio.h>
#include<math.h>
int main() {
    int num,digit,rev=0,org;
   printf("enter a no:");
   scanf("%d",&num);
   org=num;
   while(num!=0){
       digit=num%10;
       rev=rev*10+digit;
       num=num/10;
   }
   printf("%d",rev);
   if(org==rev){
       printf(" is palindrome");
   }
   else{
       printf(" is not palindrome");
   }
    return 0;
}
